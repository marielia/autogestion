    <sql-query name="findSubDarioVentas">
   		<query-param name="fechaDesde" type="timestamp"/>
	    <query-param name="fechaHasta" type="timestamp"/>  
	   	<query-param name="codCliente" type="integer"/>
	    <query-param name="codCcss" type="Integer"/>
	    
    
    	select 
		v.fecha as fecha,
		v.tipo_comprobante as tipo_c,
		v.tipo as tipo ,
		c.cod_cliente_alfa as cliAlfa,
		v.cuit as cuitcli,
		v.desc_cliente as razonSoci,
		cs.desc_ccss as ccss,
		v.nrosucursal as sucursal,
		isnull(v.nro_comprobante,0) as nroCompro,
		isnull(v.neto_gravado,0) as netoGravado,
		isnull(v.nogravado,0) as noGravado,
		isnull(v.exento,0) as exento,
		isnull(v.iva,0) as iva,
		isnull(v.iva2,0) as iva2,
		isnull(v.otras_percepciones,0) as otrasPerc,
		isnull(v.impuestoInterno,0) as impuInte,
		isnull(v.tasaFondo,0) as tasafondo,
		isnull(v.itc,0) as itc,
		isnull(v.piva,0) as piva,
		isnull(v.iibb,0) as iibb,
		f.nroRemito as remito,
		isnull(v.total_comprobante,0) as total,
		viv.valor as porcentajeIVA,
		isnull(v.tasavialcba,0) as leyCba,
		isnull(v.co2,0) as co2
		
		from VsubdiarioVentas v inner join  mclientes c 
		on v.cuit = c.cuit and  rtrim(Ltrim(v.desc_Cliente)) = rtrim(ltrim(c.descripcion)) 
		inner join mpuntoventa pv on v.nroSucursal = pv.sucursal
		inner join mccss cs on pv.ccss = cs.cod_ccss 
		inner join mfacturasv f  
		inner join mimpuestos i on i.codigo = 5
		inner join mimpuestovigencia viv on i.codigo  = viv.cod_imp
		on f.nroFactura = nro_comprobante and f.nroSucursal =  v.nroSucursal and c.codigo = f.cliente and  UPPER(v.tipo_comprobante) like UPPER(f.tipoComp) and UPPER(f.tipo) like UPPER(v.tipo)
		where 
		(v.fecha between :fechaDesde and dateadd(dd,1,:fechaHasta) or (:fechaDesde is  null  or dateadd(dd,1,:fechaHasta) is null)) and
		(c.codigo = :codCliente or :codCliente = -1) and
		(cs.cod_ccss = :codCcss or :codCcss = -1) 
    
    order by v.fecha
